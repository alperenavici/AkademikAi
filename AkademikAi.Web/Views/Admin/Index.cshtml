@{
    ViewData["Title"] = "Admin Paneli - AkademikAI";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/dashboard-new.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .admin-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            cursor: pointer;
            border: 1px solid #e0e0e0;
        }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .admin-card-icon {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #3498db;
        }

        .admin-card h3 {
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .admin-card p {
            color: #7f8c8d;
            margin-bottom: 20px;
        }

        .admin-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2 class="logo">AkademikAI Admin</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="@Url.Action("Index", "Admin")" class="nav-link active">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Panel</span>
                </a>
                <a href="@Url.Action("ExamManagement", "Admin")" class="nav-link">
                    <i class="fas fa-clipboard-list"></i>
                    <span>Sınav Yönetimi</span>
                </a>
                <a href="@Url.Action("CreateExam", "Admin")" class="nav-link">
                    <i class="fas fa-plus-circle"></i>
                    <span>Sınav Oluştur</span>
                </a>
                <a href="@Url.Action("Dashboard", "User")" class="nav-link">
                    <i class="fas fa-arrow-left"></i>
                    <span>Kullanıcı Paneli</span>
                </a>
            </nav>
            <div class="sidebar-footer">
                <form asp-action="Logout" asp-controller="User" method="post" style="display: inline;">
                    <button type="submit" class="logout-btn">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Çıkış Yap</span>
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="main-header">
                <h1>Admin Paneli</h1>
                <p>Sınav ve sistem yönetimi.</p>
            </header>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" style="background-color: #d4edda; color: #155724; padding: 15px; margin: 15px; border-radius: 5px; border: 1px solid #c3e6cb;">
                    <i class="fas fa-check-circle"></i>
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" style="background-color: #f8d7da; color: #721c24; padding: 15px; margin: 15px; border-radius: 5px; border: 1px solid #f5c6cb;">
                    <i class="fas fa-exclamation-circle"></i>
                    @TempData["ErrorMessage"]
                </div>
            }

            <div class="admin-grid">
                <div class="admin-card" onclick="location.href='@Url.Action("ExamManagement", "Admin")'">
                    <div class="admin-card-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h3>Sınav Yönetimi</h3>
                    <p>Mevcut sınavları görüntüle, düzenle ve yönet</p>
                    <button class="btn-action btn-primary">
                        <i class="fas fa-arrow-right"></i>
                        Yönet
                    </button>
                </div>

                <div class="admin-card" onclick="location.href='@Url.Action("CreateExam", "Admin")'">
                    <div class="admin-card-icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <h3>Yeni Sınav Oluştur</h3>
                    <p>Öğrenciler için yeni sınav oluştur ve programla</p>
                    <button class="btn-action btn-primary">
                        <i class="fas fa-plus"></i>
                        Oluştur
                    </button>
                </div>

                <div class="admin-card" onclick="location.href='@Url.Action("Dashboard", "User")'">
                    <div class="admin-card-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <h3>Kullanıcı Paneli</h3>
                    <p>Normal kullanıcı deneyimini görüntüle</p>
                    <button class="btn-action btn-secondary">
                        <i class="fas fa-eye"></i>
                        Görüntüle
                    </button>
                </div>

                <div class="admin-card">
                    <div class="admin-card-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <h3>İstatistikler</h3>
                    <p>Sınav ve öğrenci performans istatistikleri</p>
                    <button class="btn-action btn-secondary" disabled>
                        <i class="fas fa-clock"></i>
                        Yakında
                    </button>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
