@{
    ViewData["Title"] = "Test Çözme Ekranı - AkademikAI";
    var examId = ViewBag.ExamId;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/custom-exam.css" />
    <link rel="stylesheet" href="~/css/design-system.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Loading Screen -->
    <div id="exam-loading" class="loading-container">
        <div class="loading-content">
            <div class="loading-spinner">
                <div class="spinner"></div>
            </div>
            <h2 class="loading-title">Testiniz Hazırlanıyor...</h2>
            <p class="loading-text">Sorular yükleniyor, lütfen bekleyiniz</p>
        </div>
    </div>

    <!-- Exam Container -->
    <div id="exam-container" class="exam-container" style="display: none;">
        <!-- Header with Timer and Progress -->
        <header class="exam-header">
            <div class="header-left">
                <button id="back-button" class="btn-back" onclick="confirmExitExam()">
                    <i class="fas fa-arrow-left"></i>
                    <span>Çıkış</span>
                </button>
            </div>
            
            <div class="header-center">
                <h1 id="exam-title" class="exam-title">Test Adı</h1>
                <div class="exam-meta">
                    <span id="exam-description">Test açıklaması</span>
                </div>
            </div>
            
            <div class="header-right">
                <div class="timer-container">
                    <i class="fas fa-clock timer-icon"></i>
                    <span id="timer" class="timer">00:00</span>
                </div>
            </div>
        </header>

        <!-- Progress Bar -->
        <div class="progress-section">
            <div class="progress-info">
                <span class="progress-text">
                    Soru <span id="current-question">1</span> / <span id="total-questions">20</span>
                </span>
                <span class="progress-percentage">
                    <span id="progress-percent">0</span>%
                </span>
            </div>
            <div class="progress-bar">
                <div id="progress-fill" class="progress-fill"></div>
            </div>
        </div>

        <!-- Question Navigation -->
        <div class="question-navigation">
            <div class="nav-buttons">
                <button id="prev-button" class="nav-btn nav-btn-prev" disabled>
                    <i class="fas fa-chevron-left"></i>
                    Önceki
                </button>
                <button id="next-button" class="nav-btn nav-btn-next">
                    Sonraki
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
            
            <div class="question-grid-toggle">
                <button id="question-grid-btn" class="btn-grid">
                    <i class="fas fa-th-large"></i>
                    Soru Haritası
                </button>
            </div>
        </div>

        <!-- Question Content -->
        <main class="question-content">
            <div id="question-card" class="question-card">
                <!-- Question will be loaded here -->
            </div>
        </main>

        <!-- Question Grid Modal -->
        <div id="question-grid-modal" class="modal-overlay" style="display: none;">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Soru Haritası</h3>
                    <button class="modal-close" onclick="closeQuestionGrid()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="question-grid" class="question-grid">
                        <!-- Question numbers will be loaded here -->
                    </div>
                    <div class="grid-legend">
                        <div class="legend-item">
                            <span class="legend-color answered"></span>
                            <span>Cevaplanmış</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-color current"></span>
                            <span>Mevcut Soru</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-color unanswered"></span>
                            <span>Cevaplanmamış</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Finish Exam Button -->
        <div class="finish-section">
            <button id="finish-exam-btn" class="btn-finish-exam">
                <i class="fas fa-check-circle"></i>
                Testi Bitir
            </button>
        </div>
    </div>

    <!-- Hidden Form for Submission -->
    <form id="submitExamForm" style="display: none;">
        @Html.AntiForgeryToken()
        <input type="hidden" id="exam-id" name="examId" value="@examId" />
    </form>

    <script src="~/js/custom-exam.js"></script>
</body>
</html>
