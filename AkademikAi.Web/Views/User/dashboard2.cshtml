@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ana Sayfa - AkademikAI</title>
    <link rel="stylesheet" href="~/css/dashboard.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- YAN NAVİGASYON (SIDEBAR) -->
        <aside class="sidebar">
            <div class="logo">AkademikAI</div>
            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a asp-action="Dashboard" asp-controller="User" method="get" class="active">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                            <span>Ana Sayfa</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="profile" asp-controller="User" method="get">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                            <span>Profil</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="sidebar-footer">
                <form asp-action="logout" asp-controller="user" method="post">
                    
                <button class="btn-logout">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                    <span>Çıkış Yap</span>
                </button>
                </form>
            </div>
        </aside>

        <!-- ANA İÇERİK ALANI -->
        <main class="main-content">
            <header class="main-header">
                <h1>Hoş Geldin, Ahmet!</h1>
                <p>Bugün öğrenmeye hazır mısın?</p>
            </header>

            <!-- İstatistik Kartları -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="value">12</div>
                    <div class="label">Tamamlanan Dersler</div>
                </div>
                <div class="stat-card">
                    <div class="value">1.240</div>
                    <div class="label">Çözülen Soru</div>
                </div>
                <div class="stat-card">
                    <div class="value">%88</div>
                    <div class="label">Genel Başarı</div>
                </div>
                <div class="stat-card">
                    <div class="value">4</div>
                    <div class="label">Aktif Ders</div>
                </div>
            </div>

            <!-- Devam Eden Dersler -->
            <div class="card">
                <h2 class="card-header">Devam Eden Derslerin</h2>
                <!-- Buraya dinamik olarak ders listesi gelebilir -->
                <p>Şu an devam eden bir dersin bulunmuyor. Yeni bir derse başla!</p>
            </div>
        </main>
    </div>
</body>
</html>