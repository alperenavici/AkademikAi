@{
    ViewData["Title"] = "Payment Page";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AkademikAi - Planlar ve Fiyatlandırma</title>
    <link href="~/css/active.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* --- TEMEL STİLLER VE RESETLEME --- */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f8f8;
            color: #1f2937;
            overflow-x: hidden;
        }

        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 2rem 0;
        }

            .header .logo {
                font-size: 1.75rem;
                font-weight: 700;
            }

            .header .nav-links {
                display: flex;
                gap: 0.5rem;
            }

                .header .nav-links a {
                    padding: 0.5rem 1rem;
                    border-radius: 8px;
                    font-size: 0.9rem;
                    font-weight: 500;
                    transition: background-color 0.2s;
                }

                    .header .nav-links a:hover {
                        background-color: #e5e7eb;
                    }

            .header .user-actions {
                display: flex;
                align-items: center;
                gap: 1.5rem;
                font-size: 0.9rem;
                font-weight: 500;
            }


        /* --- SAYFA ÖZEL STİLLERİ (Payment) --- */
        .page-hero {
            width: 100%;
            background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 100%);
            border: 1px solid #e5e7eb;
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.05);
            text-align: center;
        }

            .page-hero h1 {
                font-weight: 800;
                font-size: clamp(2rem, 5vw, 2.75rem);
                color: #111827;
                margin-bottom: 1rem;
            }

            .page-hero p {
                color: #4b5563;
                max-width: 700px;
                margin: 0 auto;
                font-size: 1.1rem;
                line-height: 1.6;
            }

        .plans {
            margin-top: 3rem;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            align-items: stretch;
        }

        .plan {
            background: #ffffff;
            border: 2px solid #e5e7eb;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.05);
            display: flex;
            flex-direction: column;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .plan:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
            }

        .plan-content {
            flex-grow: 1; /* İçeriğin butonu aşağı itmesini sağlar */
        }

        /* Popüler planı öne çıkaran stil */
        .plan.popular {
            border-color: #1d4ed8;
            transform: scale(1.05); /* Popüler planı biraz büyütür */
        }

            .plan.popular:hover {
                transform: scale(1.05) translateY(-5px);
            }

        .plan .title {
            font-weight: 700;
            font-size: 1.25rem;
        }

        .plan .price {
            font-size: 2.5rem;
            font-weight: 800;
            color: #111827;
            margin: 1rem 0;
        }

            .plan .price span {
                font-size: 1rem;
                font-weight: 500;
                color: #6b7280;
            }

        .plan .features {
            display: grid;
            gap: 0.75rem;
            color: #4b5563;
            margin-bottom: 2rem;
        }

        .features .feature-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .cta {
            background: #1d4ed8;
            color: white;
            border: none;
            border-radius: 8px;
            padding: .85rem 1.5rem;
            font-weight: 600;
            cursor: pointer;
            transition: background .2s, transform .1s;
            width: 100%;
            font-size: 1rem;
        }

            .cta:hover {
                background: #1e40af;
                transform: translateY(-2px);
            }

        /* Başlangıç ve Takım planlarının buton stilleri */
        .plan:not(.popular) .cta {
            background-color: #ffffff;
            color: #1d4ed8;
            border: 2px solid #e5e7eb;
        }

            .plan:not(.popular) .cta:hover {
                background-color: #f9fafb;
                border-color: #d1d5db;
            }

        /* --- RESPONSIVE / MOBİL UYUMLULUK --- */
        @@media (max-width: 992px) {
            .header .nav-links {
                display: none;
            }

            .plans {
                grid-template-columns: 1fr;
            }

            .plan.popular {
                transform: scale(1); /* Mobil ve tablette büyütme efektini kaldır */
            }
        }

        @@media (max-width: 576px) {
            .container {
                padding: 0 1rem;
            }

            .header .logo {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <!-- HEADER -->
        <header class="header">
            <div class="logo">AkademikAi.com</div>
            <nav class="nav-links">
                <a asp-controller="Home" asp-action="Index" >Ana Sayfa</a>
                <a asp-controller="Home" asp-action="About">Hakkımızda</a>
                <a asp-controller="Home" asp-action="Contact">İletişim</a>
                <a asp-controller="Home" asp-action="Payment" class="active">Ödeme</a>

            </nav>
            <div class="user-actions">
                <a asp-controller="User" asp-action="Login">Log In</a>
                <a asp-controller="User" asp-action="Register">Sign Up</a>

            </div>
        </header>

        <!-- ANA İÇERİK -->
        <main>
            <div class="page-hero">
                <h1>Size Uygun Planı Seçin</h1>
                <p>Potansiyelinizi ortaya çıkarmak için ilk adımı atın. Tüm planlarımızda esneklik ve şeffaflık sunuyoruz.</p>
            </div>

            <section class="plans">
                <!-- Başlangıç Planı -->
                <div class="plan">
                    <div class="plan-content">
                        <div class="title">Başlangıç</div>
                        <div class="price">₺0</div>
                        <div class="features">
                            <div class="feature-item">✔ Günlük 5 soru hakkı</div>
                            <div class="feature-item">✔ Temel performans takibi</div>
                            <div class="feature-item">✔ Standart analizler</div>
                        </div>
                    </div>
                    <button class="cta">Ücretsiz Başla</button>
                </div>
                <!-- Pro Planı (Popüler) -->
                <div class="plan popular">
                    <div class="plan-content">
                        <div class="title">Pro</div>
                        <div class="price">₺129 <span>/ay</span></div>
                        <div class="features">
                            <div class="feature-item">✔ Sınırsız soru çözümü</div>
                            <div class="feature-item">✔ Gelişmiş akıllı analizler</div>
                            <div class="feature-item">✔ Kişiselleştirilmiş çalışma planı</div>
                            <div class="feature-item">✔ Motivasyon ve hedef takibi</div>
                        </div>
                    </div>
                    <button class="cta">Hemen Başla</button>
                </div>
                <!-- Takım Planı -->
                <div class="plan">
                    <div class="plan-content">
                        <div class="title">Takım</div>
                        <div class="price">₺499 <span>/ay</span></div>
                        <div class="features">
                            <div class="feature-item">✔ 10 kullanıcıya kadar destek</div>
                            <div class="feature-item">✔ Yönetici ve takip paneli</div>
                            <div class="feature-item">✔ Grup raporları ve analizler</div>
                            <div class="feature-item">✔ Öncelikli e-posta desteği</div>
                        </div>
                    </div>
                    <button class="cta">İletişime Geç</button>
                </div>
            </section>
        </main>
    </div>

</body>
</html>